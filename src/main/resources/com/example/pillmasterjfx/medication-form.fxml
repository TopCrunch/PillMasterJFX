                        <Label fx:id="periodLabelB" alignment="CENTER" contentDisplay="CENTER" text="AM">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox fx:id="timeGroupC" alignment="CENTER" layoutX="315.0" layoutY="20.0">
                     <children>
                        <VBox alignment="CENTER">
                           <children>
                              <Button fx:id="upHourButtonC" mnemonicParsing="false" onAction="#onUpHourButtonClick" prefHeight="20.0" prefWidth="30.0" text="^" />
                              <Label fx:id="hourLabelC" alignment="CENTER" contentDisplay="CENTER" text="0">
